<LessonDrawer>:

	orientation: 'vertical'
	spacing: 20

	Image:
		id: lesson_image
		source: root.source
		size_hint_y: .7
		size_hint_x: .9
		allow_stretch: True
		keep_ratio: False
		pos_hint: {'center_x': 0.5}

	MDLabel:
		id: lesson_description
		text: root.name + '\n' + root.description
		font_name: app.font_name
		font_size: 50
		size_hint_y: .3
		halign: 'center'

	MDBoxLayout:
		orientation: 'horizontal'
		size_hint_y: .3

		MDRectangleFlatIconButton:
			id: lesson_previouse_button
			font_name: app.font_name
			icon: ''
			md_bg_color: ( '#310b38' )
			text: app.previouse_button[app.LANGUAGE]
			font_size: 60
			on_release: app.lesson_callback(self, root.lesson_sources, root.lesson_descriptions, root.lesson_names, root , root.iterator - 1, root.title)
			size_hint_x: .5
			
		MDRectangleFlatIconButton:
			id: lesson_next_button
			font_name: app.font_name
			icon: ''
			md_bg_color: ( '#310b38' )
			text: app.next_button[app.LANGUAGE]
			font_size: 60
			on_release: app.lesson_callback(self,root.lesson_sources, root.lesson_descriptions, root.lesson_names, root,  root.iterator + 1, root.title)
			size_hint_x: .5
	
	MDRectangleFlatIconButton:
		icon: 'heart-outline'
		font_name: app.font_name
		text: app.add_favorite[app.LANGUAGE]
		font_size: 60
		md_bg_color: ( '#310b38' )
		on_release: app.add_to_favorite(root)
		size_hint_x: 1
		pos_hint: {'center_x': .5}

<LessonsHomeWidget>:
	cols: 1
	height: app.window
	size_hint_y: None
	height: self.minimum_height
	spacing: 20



